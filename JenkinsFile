pipeline {
  agent any
    
  tools {nodejs "node"}
    
  stages {
        
    stage('Cloning Git') {
      steps {
        git 'https://github.com/springernature/qa-playground.git'
      }
    }
        
    stage('Install dependencies') {
      steps {
        sh 'npm install'
        sh 'npm init'
        sh 'npm install pa11y'
      }
    }
     
    stage('Test') {
      steps {
         sh 'node index.js'
      }
    }      
  }
}